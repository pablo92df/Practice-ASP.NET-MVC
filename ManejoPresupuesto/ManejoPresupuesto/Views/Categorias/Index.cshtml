@model PaginacionRespuesta<Categoria>
@{
    ViewData["Title"] = "Categorias";
}
<h1>Categorias</h1>

<h2>Cantidad de categorias: @Model.CantidadTotalRecords - Cantidad de paginas: @Model.CantidadTotalDePaginas</h2>
<a asp-action="Crear" class="btn btn-primary mb-3">Crear Nuevo</a>
<partial name="_Paginacion"/>
<table class="table">
    <thead>
        <tr>
            <th>Acciones</th>
            <th>Nombre</th>
            <th>Tipo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Elementos)
        {
            <tr>
                <td>
                    <a class="btn btn-primary" asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@item.Id">Borrar</a>
                </td>
                <td>
                    @item.Nombre
                </td>
                <td>
                    @item.TipoOperacionId.ToString()
                </td>
            </tr>
        }
    </tbody>
</table>
