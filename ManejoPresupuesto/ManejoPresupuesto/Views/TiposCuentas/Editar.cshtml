@model TipoCuenta

@{
    ViewData["Title"] = "Editar Tipo Cuenta";
}
<h1>Editar Tipo Cuenta</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="TiposCuentas" asp-action="Editar">
    <input type="hidden" asp-for="Id"/>
    <div class="mb-3">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input type="text" asp-for="Nombre" class="form-control"/>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
 
    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index"></a>
</form>

@*Incluyo vista parcial de validaciones de Jquery. Esta vista se encuentra en Views->shared->validation*@

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}

